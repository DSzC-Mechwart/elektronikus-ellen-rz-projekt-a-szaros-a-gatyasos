<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="LoginScreen" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Bejelentkezés" FontSize="20" Margin="0,0,0,10" />

            <Grid>
                <TextBox x:Name="StudentNameInput" Width="200" Height="30" Margin="0,0,0,10" 
                         TextChanged="TextBox_TextChanged" />
                <TextBlock x:Name="StudentNamePlaceholder" Text="Tanuló neve" Foreground="Gray" 
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" 
                           IsHitTestVisible="False"/>
            </Grid>

            <Button Content="Bejelentkezés" Width="100" Click="BejelentkezesGomb_Click"/>
        </StackPanel>

        <StackPanel x:Name="GradeInputScreen" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Collapsed">
            <TextBlock Text="Jegy hozzáadása" FontSize="20" Margin="0,0,0,10" />

            <ComboBox x:Name="SubjectComboBox" Width="200" Height="30" Margin="0,0,0,10" />

            <Grid>
                <TextBox x:Name="GradeInput" Width="200" Height="30" Margin="0,0,0,10" 
                         TextChanged="TextBox_TextChanged"/>
                <TextBlock x:Name="GradePlaceholder" Text="Jegy" Foreground="Gray" 
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" 
                           IsHitTestVisible="False"/>
            </Grid>

            <Grid>
                <TextBox x:Name="TopicInput" Width="200" Height="30" Margin="0,0,0,10" 
                         TextChanged="TextBox_TextChanged"/>
                <TextBlock x:Name="TopicPlaceholder" Text="Téma" Foreground="Gray" 
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" 
                           IsHitTestVisible="False"/>
            </Grid>

            <Grid>
                <TextBox x:Name="AssessmentTypeInput" Width="200" Height="30" Margin="0,0,0,10" 
                         TextChanged="TextBox_TextChanged"/>
                <TextBlock x:Name="AssessmentPlaceholder" Text="Számonkérés típusa" Foreground="Gray" 
                           VerticalAlignment="Center" HorizontalAlignment="Left" Margin="5,0,0,0" 
                           IsHitTestVisible="False"/>
            </Grid>

            <Button Content="Jegy hozzáadása" Width="100" Click="JegyHozzaadGomb_Click"/>

            <Button Content="Admin Panel" Width="100" Margin="0,10,0,0" Click="AdminGomb_Click"/>
        </StackPanel>
    </Grid>
</Window>
