<Window x:Class="TanuloApp.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Felület" Height="450" Width="800">
    <Grid>
        <StackPanel>

            <TextBlock Text="Tantárgyak és átlagok:" FontWeight="Bold" Margin="10"/>
            <ListBox x:Name="targyAtlagokListBox" Margin="10"/>

            <TextBlock Text="Tanulók és összesített átlagok:" FontWeight="Bold" Margin="10"/>
            <ListBox x:Name="tanuloAtlagokListBox" Margin="10"/>

            <Button Content="Bezárás" Click="CloseButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
