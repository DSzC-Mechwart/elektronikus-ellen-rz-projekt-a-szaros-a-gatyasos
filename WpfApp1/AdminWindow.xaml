        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin nézet" 
        Width="800" 
        Height="600"
        WindowStartupLocation="CenterScreen"
        Background="#FFF8F3">
    <Grid>
        <StackPanel>
            <TextBlock Text="Tanulók összesített átlagai:" FontWeight="Bold" FontSize="16" Margin="10" Foreground="#405D72"/>
            <ListBox x:Name="tanulokAtlagListBox" Margin="10" Height="400" Background="#F7E7DC" BorderBrush="#758694" BorderThickness="1"/>
        </StackPanel>
    </Grid>
</Window>
