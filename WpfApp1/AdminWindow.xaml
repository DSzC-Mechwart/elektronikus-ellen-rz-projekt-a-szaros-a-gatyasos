<Window x:Class="WpfApp1.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Window" Height="400" Width="600">
    <Grid>
        <DataGrid Name="dataGridStudents" AutoGenerateColumns="False" Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Név" Binding="{Binding Nev}" />
                <DataGridTextColumn Header="Átlag" Binding="{Binding Atlag}" />
                <DataGridCheckBoxColumn Header="Lemorzsolódással veszélyeztetett" Binding="{Binding IsAtRisk}" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
